<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scroll1" android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">


	<RelativeLayout android:layout_width="fill_parent"
		android:padding="10dip"
		android:id="@+id/profile_layout" android:layout_height="fill_parent">
		
		<TextView android:text="name" android:id="@+id/profile_name"
			android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20dip"></TextView>

		<TextView android:text="email" android:id="@+id/profile_email"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="5dip"
			android:layout_below="@+id/profile_name" android:textSize="12dip"></TextView>

		<TextView android:text="location" android:id="@+id/profile_location"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="5dip"
			android:layout_below="@+id/profile_email" android:textSize="12dip"></TextView>

		<TextView android:id="@+id/profile_config" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textStyle="bold"
			android:text="@string/profile_config" android:padding="15dip"
			android:layout_marginTop="18dip"
			android:layout_below="@+id/profile_location" ></TextView>

		<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/profile_topics_button"
			android:text="@string/profile_change_tags"
			android:layout_below="@+id/profile_config"></Button>

		<Button android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/profile_change_button"
			android:text="@string/profile_change" android:layout_below="@+id/profile_topics_button"
			></Button>

	<Button android:layout_height="wrap_content" android:id="@+id/Button01"
		android:layout_below="@+id/profile_change_button"
		android:layout_width="wrap_content" android:layout_alignBottom="@+id/profile_layout" android:text="@string/profile_update" android:layout_centerHorizontal="true" android:layout_marginTop="15dip"></Button>

</RelativeLayout>
</ScrollView>


